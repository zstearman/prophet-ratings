<% provide(:title, "Log In") %>

<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 boxed-div">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "faded-button" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", plans_path %></p>
  </div>
</div>