<header class="navbar navbar-fixed-top">
  <div class="container" id="logged-in-header">
    <div class="row">
      <div class="col-md-4 col-xs-8" id="logo-left">
        <%= link_to image_tag("Prophet_Logo.png", alt: "Prophet logo", width: 200 ),
        root_path, id: "logo" %>
      </div>
      <div class="col-md-4 hidden-xs">
        
      </div>
      <div class="col-xs-4" id="user-dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= current_user.first_name + " " + current_user.last_name %>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "Log out", logout_path, method: :delete %>
          </li>
        </ul>
      </div>
    </div>

    <div class="subheader">
      <div class="col-md-4 col-sm-6 col-xs-8 page-title">
        <%= yield(:title) %>
      </div>
      <nav>
        <div class="container-fluid button-container">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#loggedinNav">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span> 
          </button>
        </div>
        <div class="collapse navbar-collapse" id="loggedinNav">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Rankings", rankings_path %></li>
            <li><%= link_to "Predictions", '# '%></li>
            <li><%= link_to "Tourney Simulator", '# '%></li>
            <% if current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Admin <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Users", users_path %></li>
                  <li><%= link_to "Teams", teams_path %></li>
                </ul>
              </li>
            <% end %>
            <!--<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 10" preserveAspectRatio="none">-->
            <!--  <polygon points="100 0 100 10 0 10" />-->
            <!--</svg>-->
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>