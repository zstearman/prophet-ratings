<h1 class="center">Team Rankings</h1>

<% if current_user.admin? %>
  <%= link_to "Add Team", new_team_path, { :class=>'faded-button', :id => 'add_team_button' } %>
<% end %>

<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">School</th>
      <th scope="col">Name</th>
      <th scope="col">Rank</th>
    </tr>
  </thead>
  <tbody>
    <% x = 0 %>
    <% @teams.each do |team| %>
      <% if team.active? %>
        <tr>
          <% x = x + 1 %>
          <th><%= x %></th>
          <td><%= link_to(team.school, team) %></td>
          <td><%= team.name %></td>
          <td><%= team.ap_rank %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


