<div class="row">
  <div class="col-md-6">
    <h1 class="center">Top 25</h1>
    
    <table class="table table-sm table-bordered">
      <thead>
        <tr class="thead-dark">
          <th scope="col">#</th>
          <th scope="col">AP Rank</th> 
          <th scope="col">School</th>
          <th scope="col">Wins</th>
          <th scope="col">Losses</th>
          <th scope="col">Conf Wins</th>
          <th scope="col">Conf Losses</th>
        </tr>
      </thead>
      <tbody>
        <% x = 0 %>
        <% @team_seasons.each do |season| %>
          <% if !season.team.ap_rank.nil? %>
            <tr class="data-row">
              <% x = x + 1 %>
              <th><%= x %></th>
              <td><%= season.ap_rank %></td>
              <td><%= link_to(season.school, season.team) %></td>
              <td><%= season.wins %></td>
              <td><%= season.losses %></td>
              <td><%= season.conference_wins %></td>
              <td><%= season.conference_losses %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Complete Rankings", rankings_path %>
  </div>
  
  <div class="col-md-6">
    <h1 class="center">Today's Games</h1>
    
  </div>
</div>


